<Application x:Class="AMONIC_Session4.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AMONIC_Session4"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate
            x:Key="header_template">
            <TextBlock
                Text="{Binding}"
                TextAlignment="Center"/>
        </DataTemplate>

        <Style
             TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="CanUserResizeColumns" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="False"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="right_cell">
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>
        <Style TargetType="TextBlock" x:Key="centre_cell">
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <Style TargetType="DataGridColumnHeader" x:Key="centre_header">
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
    </Application.Resources>
</Application>
