<Window x:Class="AMONIC_Session4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMONIC_Session4"
        mc:Ignorable="d"
        Title="Flight Satisfaction Survey Reports" 
        Height="auto" 
        Width="auto"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight">
    <Grid>
        <Menu
            VerticalAlignment="Top">
            <MenuItem
                Height="20"
                Header="_View Results Summary"
                Click="MenuItem_Click">
            </MenuItem>
            <MenuItem
                Height="20"
                Header="_View Detailed Results"
                Click="MenuItem_Click_1">
            </MenuItem>
            <MenuItem
                Height="20"
                Header="_Exit"
                Click="MenuItem_Click_2">
            </MenuItem>
        </Menu>
        <Frame
            x:Name="main_frame"
            Width="auto"
            Height="auto"
            NavigationUIVisibility="Hidden">
        </Frame>
    </Grid>
</Window>
